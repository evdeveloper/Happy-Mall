{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <a href="{{ add }}" data-toggle="tooltip" title="{{ button_add }}" class="btn btn-primary"><i class="fa fa-plus"></i></a>
        <button type="button" form="form-xreviews" formaction="{{ delete }}" data-toggle="tooltip" title="{{ button_delete }}" class="btn btn-danger" onclick="confirm('{{ text_confirm }}') ? $('#form-xreviews').submit() : false;"><i class="fa fa-trash-o"></i></button>
      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    {% if success %}
    <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-list"></i> {{ text_list }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ delete }}" method="post" enctype="multipart/form-data" id="form-xreviews">
          <div class="table-responsive">
            <table class="table table-bordered table-hover">
			  <thead>
                <tr>
				  <td width="1%" class="text-center"><input type="checkbox" onclick="$('input[name*=\'selected\']').attr('checked', this.checked);" /></td>
				  {% if xreviews_name %}
                  <td class="text-left">{% if sort == 'name' %}
                    <a href="{{ sort_name }}" class="{{ order|lower }}">{{ column_name }}</a>
                    {% else %}
                    <a href="{{ sort_name }}">{{ column_name }}</a>
                    {% endif %}</td>
          {% endif %}
          {% if xreviews_title %}
          <td class="text-left">{% if sort == 'title' %}
                    <a href="{{ sort_title }}" class="{{ order|lower }}">{{ column_title }}</a>
                    {% else %}
                    <a href="{{ sort_title }}">{{ column_title }}</a>
                    {% endif %}</td>
          {% endif %}	
          {% if xreviews_text %}
				  <td class="text-left">{% if sort == 'text' %}
                    <a href="{{ sort_text }}" class="{{ order|lower }}">{{ column_text }}</a>
                    {% else %}
                    <a href="{{ sort_text }}">{{ column_text }}</a>
                    {% endif %}</td>
          {% endif %}
          {% if xreviews_good %}
				  <td class="text-left">{% if sort == 'good' %}
                    <a href="{{ sort_good }}" class="{{ order|lower }}">{{ column_good }}</a>
                    {% else %}
                    <a href="{{ sort_good }}">{{ column_good }}</a>
                    {% endif %}</td>
          {% endif %}
          {% if xreviews_bad %}
				  <td class="text-left">{% if sort == 'bad' %}
                    <a href="{{ sort_bad }}" class="{{ order|lower }}">{{ column_bad }}</a>
                    {% else %}
                    <a href="{{ sort_bad }}">{{ column_bad }}</a>
                    {% endif %}</td>
          {% endif %}
                  <td class="text-left">{% if sort == 'date_added' %}
                    <a href="{{ sort_date_added }}" class="{{ order|lower }}">{{ column_date_added }}</a>
                    {% else %}
                    <a href="{{ sort_date_added }}">{{ column_date_added }}</a>
                    {% endif %}</td>
                  <td class="text-left">{% if sort == 'status' %}
                    <a href="{{ sort_status }}" class="{{ order|lower }}">{{ column_status }}</a>
                    {% else %}
                    <a href="{{ sort_status }}">{{ column_status }}</a>
					{% endif %}</td>
                  <td class="text-right">{{ column_action }}</td>
                </tr>
              </thead>
              <tbody>
                {% if xreviewss %}
				        {% for xreviews in xreviewss %}
                <tr>
                  <td class="text-center">{% if xreviews.xreviews_id in selected %}
                    <input type="checkbox" name="selected[]" value="{{ xreviews.xreviews_id }}" checked="checked" />
                    {% else %}
                    <input type="checkbox" name="selected[]" value="{{ xreviews.xreviews_id }}" />
                    {% endif %}
                  </td>
                  {% if xreviews_name %}<td class="text-left col-md-1">{{ xreviews.name }}</td>{% endif %}
        				  {% if xreviews_title %}<td class="text-left col-md-2">{{ xreviews.title }}</td>{% endif %}
        				  {% if xreviews_text %}<td class="text-left col-md-2">{{ xreviews.text }}</td>{% endif %}
        				  {% if xreviews_good %}<td class="text-left col-md-2">{{ xreviews.good }}</td>{% endif %}
        				  {% if xreviews_bad %}<td class="text-left col-md-2">{{ xreviews.bad }}</td>{% endif %}
        				  <td class="text-left col-md-1">{{ xreviews.date_added }}</td>
        				  <td class="text-left col-md-1">{{ xreviews.status }}</td>
        				  <td class="text-right col-md-1"><a href="{{ xreviews.edit }}" data-toggle="tooltip" title="{{ button_edit }}" class="btn btn-primary"><i class="fa fa-pencil"></i></a></td>
                </tr>
                {% endfor %}
                {% else %}
                <tr>
                  <td class="text-center" colspan="9">{{ text_no_results }}</td>
                </tr>
                {% endif %}
              </tbody>
            </table>
	      </div>
		</form>
		    <div class="row">
          <div class="col-sm-6 text-left">{{ pagination }}</div>
          <div class="col-sm-6 text-right">{{ results }}</div>
        </div>
      </div>
      <div style="background: #233746;color: #ffffff;font-size: 130%;padding: 10px;border-color: #233746;border-radius: 3px;margin-top: 20px;">Еще больше модулей для Opencart 3.x на нашем сайте <a style="color: #fffc00;" href="https://opencart3x.ru/">opencart3x.ru </a>!</div>
    </div>
  </div>
</div>
{{ footer }}