											<label class="btn btn-default">
												<input type="radio" name="rating" value="1" autocomplete="off" />{{ text_enabled }}
											</label>
											<label class="btn btn-danger btn-default active">
												<input type="radio" name="rating" value="0" autocomplete="off" checked="checked" />{{ text_disabled }}
											</label>
										{% endif %}
									</div>
								</div>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-md-6">
							<div class="form-group">
								<label class="col-sm-4 control-label" for="input-photo">{{ entry_photo }}</label>
								<div class="col-sm-8">
									<div class="btn-group" data-toggle="buttons">
										{% if photo %}
											<label class="btn btn-default active">
												<input type="radio" name="photo" value="1" autocomplete="off" checked="checked" />{{ text_enabled }}
											</label>
											<label class="btn btn-danger btn-default">
												<input type="radio" name="photo" value="0" autocomplete="off"/>{{ text_disabled }}
											</label>
										{% else %}
											<label class="btn btn-default">
												<input type="radio" name="photo" value="1" autocomplete="off" />{{ text_enabled }}
											</label>
											<label class="btn btn-danger btn-default active">
												<input type="radio" name="photo" value="0" autocomplete="off" checked="checked" />{{ text_disabled }}
											</label>
										{% endif %}
									</div>
								</div>
							</div>
						</div>
						<div class="col-md-6">
							<div class="form-group">
								<label class="col-sm-4 control-label" for="input-width">{{ entry_size }}</label>
								<div class="col-sm-8">
									<div class="row">
									<div class="col-sm-6">
										<input type="text" name="width" value="{{ width }}" placeholder="{{ entry_width }}" id="input-width" class="form-control" />
									</div>
									<div class="col-sm-6">
										<input type="text" name="height" value="{{ height }}" placeholder="{{ entry_height }}" class="form-control" />
									</div>
									</div>
								</div>
							</div>	  
						</div>
					</div>
				</form>
			</div>
			<div style="background: #233746;color: #ffffff;font-size: 130%;padding: 10px;border-color: #233746;border-radius: 3px;margin-top: 20px;">Еще больше модулей для Opencart 3.x на нашем сайте <a style="color: #fffc00;" href="https://opencart3x.ru/">opencart3x.ru </a>!</div>
		</div>
	</div>
</div>
