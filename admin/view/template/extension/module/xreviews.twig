											</label>
											<label class="btn btn-danger btn-default active">
												<input type="radio" name="name_status" value="0" autocomplete="off" checked="checked" />{{ text_disabled }}
											</label>
										{% endif %}
									</div>
								</div> 
							</div>
						</div>
						<div class="col-md-6">
							<div class="form-group">
								<label class="col-sm-4 control-label" for="input-city">{{ entry_city }}</label>
								<div class="col-sm-8">
									<div class="btn-group" data-toggle="buttons">
										{% if city %}
											<label class="btn btn-default active">
												<input type="radio" name="city" value="1" autocomplete="off" checked="checked" />{{ text_enabled }}
											</label>
											<label class="btn btn-danger btn-default">
												<input type="radio" name="city" value="0" autocomplete="off"/>{{ text_disabled }}
											</label>
										{% else %}
											<label class="btn btn-default">
												<input type="radio" name="city" value="1" autocomplete="off" />{{ text_enabled }}
											</label>
											<label class="btn btn-danger btn-default active">
												<input type="radio" name="city" value="0" autocomplete="off" checked="checked" />{{ text_disabled }}
											</label>
										{% endif %}
									</div>
								</div>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-md-6">
							<div class="form-group">
								<label class="col-sm-4 control-label" for="input-date-added">{{ entry_date_added }}</label>
								<div class="col-sm-8">
									<div class="btn-group" data-toggle="buttons">
										{% if date_added %}
											<label class="btn btn-default active">
												<input type="radio" name="date_added" value="1" autocomplete="off" checked="checked" />{{ text_enabled }}
											</label>
											<label class="btn btn-danger btn-default">
												<input type="radio" name="date_added" value="0" autocomplete="off"/>{{ text_disabled }}
											</label>
										{% else %}
											<label class="btn btn-default">
												<input type="radio" name="date_added" value="1" autocomplete="off" />{{ text_enabled }}
											</label>
											<label class="btn btn-danger btn-default active">
												<input type="radio" name="date_added" value="0" autocomplete="off" checked="checked" />{{ text_disabled }}
											</label>
										{% endif %}
									</div>
								</div>
							</div>	
						</div>
						<div class="col-md-6">
							<div class="form-group">
								<label class="col-sm-4 control-label" for="input-rating">{{ entry_rating }}</label>
								<div class="col-sm-8">
									<div class="btn-group" data-toggle="buttons">
										{% if rating %}
											<label class="btn btn-default active">
												<input type="radio" name="rating" value="1" autocomplete="off" checked="checked" />{{ text_enabled }}
											</label>
											<label class="btn btn-danger btn-default">
												<input type="radio" name="rating" value="0" autocomplete="off"/>{{ text_disabled }}
											</label>
