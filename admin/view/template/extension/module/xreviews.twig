												<input type="radio" name="text" value="0" autocomplete="off"/>{{ text_disabled }}
											</label>
										{% else %}
											<label class="btn btn-default">
												<input type="radio" name="text" value="1" autocomplete="off" />{{ text_enabled }}
											</label>
											<label class="btn btn-danger btn-default active">
												<input type="radio" name="text" value="0" autocomplete="off" checked="checked" />{{ text_disabled }}
											</label>
										{% endif %}
									</div>
								</div>
							</div>
						</div>
						<div class="col-md-6">
							<div class="form-group">
								<label class="col-sm-4 control-label" for="input-bad">{{ entry_bad }}</label>
								<div class="col-sm-8">
									<div class="btn-group" data-toggle="buttons">
										{% if bad %}
											<label class="btn btn-default active">
												<input type="radio" name="bad" value="1" autocomplete="off" checked="checked" />{{ text_enabled }}
											</label>
											<label class="btn btn-danger btn-default">
												<input type="radio" name="bad" value="0" autocomplete="off"/>{{ text_disabled }}
											</label>
										{% else %}
											<label class="btn btn-default">
												<input type="radio" name="bad" value="1" autocomplete="off" />{{ text_enabled }}
											</label>
											<label class="btn btn-danger btn-default active">
												<input type="radio" name="bad" value="0" autocomplete="off" checked="checked" />{{ text_disabled }}
											</label>
										{% endif %}
									</div>
								</div>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-md-6">
							<div class="form-group">
								<label class="col-sm-4 control-label" for="input-name-status">{{ entry_name_status }}</label>
								<div class="col-sm-8">
									<div class="btn-group" data-toggle="buttons">
										{% if name_status %}
											<label class="btn btn-default active">
												<input type="radio" name="name_status" value="1" autocomplete="off" checked="checked" />{{ text_enabled }}
											</label>
											<label class="btn btn-danger btn-default">
												<input type="radio" name="name_status" value="0" autocomplete="off"/>{{ text_disabled }}
											</label>
										{% else %}
