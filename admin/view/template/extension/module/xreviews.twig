{{ header }}{{ column_left }}
<div id="content">
	<div class="page-header">
		<div class="container-fluid">
			<div class="pull-right">
				<button type="submit" form="form-xreviews" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
				<a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
			<h1>{{ heading_title }}</h1>
			<ul class="breadcrumb">
				{% for breadcrumb in breadcrumbs %}
				<li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
				{% endfor %}
			</ul>
		</div>
	</div>
	<div class="container-fluid xreviews-module">
		{% if error_warning %}
		<div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
			<button type="button" class="close" data-dismiss="alert">&times;</button>
		</div>
		{% endif %}
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
			</div>
			<div class="panel-body">
				<form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-xreviews" class="form-horizontal">
					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
						<div class="col-sm-10">
							<div class="btn-group" data-toggle="buttons">
								{% if status %}
									<label class="btn btn-default active">
										<input type="radio" name="status" value="1" autocomplete="off" checked="checked" />{{ text_enabled }}
									</label>
									<label class="btn btn-danger btn-default">
										<input type="radio" name="status" value="0" autocomplete="off"/>{{ text_disabled }}
									</label>
								{% else %}
									<label class="btn btn-default">
										<input type="radio" name="status" value="1" autocomplete="off" />{{ text_enabled }}
									</label>
									<label class="btn btn-danger btn-default active">
										<input type="radio" name="status" value="0" autocomplete="off" checked="checked" />{{ text_disabled }}
									</label>
								{% endif %}
							</div>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-name">{{ entry_name }}</label>
						<div class="col-sm-10">
							<input type="text" name="name" value="{{ name }}" placeholder="{{ entry_name }}" id="input-name" class="form-control" />
							{% if error_name %}
							<div class="text-danger">{{ error_name }}</div>
							{% endif %}
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-limit">{{ entry_limit }}</label>
						<div class="col-sm-10">
							<input type="text" name="limit" value="{{ limit }}" placeholder="{{ entry_limit }}" id="input-limit" class="form-control" />
							{% if error_limit %}
							<div class="text-danger">{{ error_limit }}</div>
							{% endif %}
						</div>
					</div>
					<div class="form-group">
						<div class="col-sm-2"></div>
						<div class="col-sm-10">
							<h3>{{ heading_fields }}<h3>
						</div>
					</div>
					<div class="row">
						<div class="col-md-6">
							<div class="form-group">
								<label class="col-sm-4 control-label" for="input-title">{{ entry_title }}</label>
								<div class="col-sm-8">
									<div class="btn-group" data-toggle="buttons">
										{% if title %}
											<label class="btn btn-default active">
												<input type="radio" name="title" value="1" autocomplete="off" checked="checked" />{{ text_enabled }}
											</label>
											<label class="btn btn-danger btn-default">
												<input type="radio" name="title" value="0" autocomplete="off"/>{{ text_disabled }}
											</label>
										{% else %}
											<label class="btn btn-default">
												<input type="radio" name="title" value="1" autocomplete="off" />{{ text_enabled }}
											</label>
											<label class="btn btn-danger btn-default active">
												<input type="radio" name="title" value="0" autocomplete="off" checked="checked" />{{ text_disabled }}
											</label>
										{% endif %}
									</div>
								</div>
							</div>
						</div>
						<div class="col-md-6">
							<div class="form-group">
								<label class="col-sm-4 control-label" for="input-good">{{ entry_good }}</label>
								<div class="col-sm-8">
									<div class="btn-group" data-toggle="buttons">
										{% if good %}
											<label class="btn btn-default active">
												<input type="radio" name="good" value="1" autocomplete="off" checked="checked" />{{ text_enabled }}
