  <header class="header">
    <a class="header__logo logo" href="{{ home }}">
      <img src="catalog/view/theme/happy/image/logo.svg" alt="{{ name }}">
    </a>
    <div class="catalog-open">
      <span>Каталог</span>
      <div class="sandwich">
        <div class="sandwich__line sandwich__line--top"></div>
        <div class="sandwich__line sandwich__line--middle"></div>
        <div class="sandwich__line sandwich__line--bottom"></div>
      </div>
    </div>
    <nav class="nav-menu">
      <ul class="nav-menu__list">
        <li class="nav-menu__item">
          <a class="nav-menu__link" href="#">Калькулятор доставки</a>
        </li>
        <li class="nav-menu__item">
          <a class="nav-menu__link" href="#">Отследить груз</a>
        </li>
        <li class="nav-menu__item">
          <a class="nav-menu__link" href="#">Услуги</a>
        </li>
        <li class="nav-menu__item">
          <div class="nav-menu__link"><span>Ещё</span>
            <svg class="svg-sprite-icon  icon-arrow-down nav-menu__icon">
              <use xlink:href="catalog/view/theme/happy/image/svg/sprite.svg#arrow-down"></use>
            </svg>
          </div>
          <div class="submenu">
            <ul class="submenu__list">
              <li class="submenu__item"><a class="submenu__link" href="#">О нас</a></li>
              <li class="submenu__item"><a class="submenu__link" href="{{ faq }}">Вопросы-ответы</a></li>
              <li class="submenu__item"><a class="submenu__link" href="{{ contact }}">Контакты</a></li>
            </ul>
          </div>
        </li>
      </ul>
    </nav>
    <div class="search-open">
      <svg class="svg-sprite-icon  icon-search search-open__icon">
        <use xlink:href="catalog/view/theme/happy/image/svg/sprite.svg#search"></use>
      </svg>
    </div>
    <button class="connect-open" type="button" data-popup-open="feedback">Связаться с нами</button>
    <div class="header__actions actions">
      <div class="actions__item" data-popup-open="auth">
        <svg class="svg-sprite-icon  icon-login actions__icon">
          <use xlink:href="catalog/view/theme/happy/image/svg/sprite.svg#login"></use>
        </svg>
      </div>
      <a href="{{ shopping_cart }}" title="{{ text_shopping_cart }}" class="actions__item">
        <svg class="svg-sprite-icon  icon-basket actions__icon">
          <use xlink:href="catalog/view/theme/happy/image/svg/sprite.svg#basket"></use>
        </svg>
        {{ cart }}
      </a>
      <a href="{{ wishlist }}" id="wishlist-total" class="actions__item">
        <svg class="svg-sprite-icon  icon-like-outline actions__icon">
          <use xlink:href="catalog/view/theme/happy/image/svg/sprite.svg#like-outline"></use>
        </svg>
        <span class="actions__counter">{{ text_wishlist }}</span>
      </a>
    </div>
    <div class="menu-open">
      <div class="sandwich">
        <div class="sandwich__line sandwich__line--top"></div>
        <div class="sandwich__line sandwich__line--bottom"></div>
      </div>
    </div>
    <div class="searchPopup">
      <div class="searchPopup__wrapper">{{ search }}</div>
    </div>
  </header>
  {{ menu }}
