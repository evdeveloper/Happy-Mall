<div class="catalogMenu">
  {% if categories %}
    <div class="catalogMenu__tabs">
      {% for category in categories|batch((categories|length / 4)|round(1, 'ceil')) %}
        {% for child in category %}
          <div class="catalogMenu__tab">
            <img src="https://happy.3mma.ru/image/{{ child.image }}" alt="{{ child.name }}"/>
            <span>{{ child.name }}</span>
          </div>
        {% endfor %}
      {% endfor %}
    </div>
    <div class="catalogMenu__content">
      {% for category in categories %}
        <div class="catalogMenu__col">
          <div class="catalogMenu__top">
            <h2 class="catalogMenu__title">
              <a href="{{ category.href }}">{{ category.name }}</a>
              <svg class="svg-sprite-icon catalogMenu__title-icon">
                <use xlink:href="catalog/view/theme/happy/image/svg/sprite.svg#arrow-right-normal"></use>
              </svg>
            </h2>
          </div>
          <ul class="catalogMenu__list">
            {% if category.children %}
              {% for children in category.children|batch(category.children|length / category.column|round(1, 'ceil')) %}
                {% for child in children %}
                  {% if child.children %}
                    <li class="catalogMenu__item"><a class="catalogMenu__link" href="{{ child.href }}">{{ child.name }}</a></li>
                    {% for children in child.children %}
                      <li class="catalogMenu__item"><a class="catalogMenu__link" href="{{ children.href }}">{{ children.name }}</a></li>
                    {% endfor %}
                  {% else %}
                    <li class="catalogMenu__item"><a class="catalogMenu__link" href="{{ child.href }}">{{ child.name }}</a></li>
                  {% endif %}
                {% endfor %}
              {% endfor %}
            {% else %}
              <li class="catalogMenu__item">Список подкатегорий пуст...</li>
            {% endif %}
          </ul>
        </div>
      {% endfor %}
    </div>
  {% endif %}
</div>
